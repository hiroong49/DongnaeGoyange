<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sidebar.SettingFragment">

    <TextView
        android:id="@+id/tv_now_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="@string/setting_version"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black_473A22"/>
    <TextView
        android:id="@+id/tv_now_version_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_now_version"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:text="@string/setting_version_num"
        android:textSize="12sp"
        android:textColor="@color/gray_BBB5A4"/>
    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_F6F3E9"
        app:layout_constraintTop_toBottomOf="@+id/tv_now_version_num"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:text="@string/setting_logout"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black_473A22"
        android:background="@color/transparency"
        android:textAlignment="viewStart"/>
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:text="@string/email"
        android:textSize="12sp"
        android:textColor="@color/gray_BBB5A4"/>
    <View
        android:id="@id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_F6F3E9"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btn_secession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_line2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:text="@string/setting_secession"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black_473A22"
        android:background="@color/transparency"
        android:textAlignment="viewStart"/>


</androidx.constraintlayout.widget.ConstraintLayout>