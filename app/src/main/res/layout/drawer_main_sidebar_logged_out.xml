<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/transparency"
        android:text="@string/sidebar_login"
        android:textSize="24sp"
        android:textColor="@color/black_473A22"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparency"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toEndOf="@+id/btn_login"
        app:layout_constraintTop_toTopOf="@+id/btn_login"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearlayout_care"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:background="@drawable/bg_sidebar_care"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:padding="15dp">
            <TextView
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="@string/sidebar_care_guide"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:layout_width="59dp"
                android:layout_height="21dp"
                android:text="@string/sidebar_hwagin"
                android:background="@drawable/bg_sidebar_btn_hwagin"
                android:textColor="@color/brown_9D917B"
                android:textSize="10sp"
                android:layout_gravity="right|center"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>