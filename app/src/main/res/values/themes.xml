<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DongnaeGoyang" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Customize your theme here. -->
    <!--Custom Dialog: round-->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_round</item>
        <item name="colorAccent">@color/yellow_F1BC35</item>    <!--버튼 text 색-->
        <item name="android:textAllCaps">false</item>           <!--버튼 text 소문자-->
    </style>

    <!--Custom BottomSheetDialog: corner 뒷배경 투명 처리-->
    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!--Toolbar title font + back button color-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="colorControlNormal">@color/brown_473A22</item>
    </style>
    <!--Toolbar title text size-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 홈 화면 탭 디자인 -->
    <style name="TabText" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--CatDetail: 탭 폰트 설정-->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>